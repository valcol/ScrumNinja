{
  "parserOptions": {
       "ecmaVersion": 6,
       "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "meteor": true,
    "es6": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "forOf": true,
    "spread": true,
    "templateString": true,
    "globalReturn": true,
    "modules": true,
    "jsx": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "always"],
    "no-dupe-args": [2],
    "no-dupe-keys": [2],
    "no-empty": [2],
    "no-empty-character-class": [2],
    "no-extra-boolean-cast": [2],
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": [2],
    "no-func-assign": [2],
    "no-inner-declarations": [2],
    "no-invalid-regexp": [2],
    "no-irregular-whitespace": [2],
    "no-obj-calls": [2],
    "no-unreachable": [2],
    // General rules
    "default-case": [2],
    "dot-notation": [2],
    "eqeqeq": [2],
    "no-redeclare": [2],
    "yoda": [2, "never"],
    // Variables
    "init-declarations": [2, "always"],
    "no-delete-var": [2],
    "no-unused-vars": [1],
    "no-undef": [0], // because Meteor container who reads files
    "no-use-before-define": [2],
    // NodeJS
    "global-require": [2],
    // Styling
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "camelcase": [2],
    "comma-style": [2, "last"],
    "eol-last": [0],
    "max-len": [1, 80, 4],
    "new-parens": [2],
    "no-lonely-if": [2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    // ES6
    "arrow-body-style": [1, "always"],
    "arrow-parens": [2],
    "no-var": [2],
    // React
    "react/prop-types": [1]
  }
}
